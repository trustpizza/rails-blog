<%= form_with model: post, remote: true do |f| %>
    <tr>
        <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
                <div class="ml-4 inline-block">
                    <div class="text-sm font-medium text-gray-900">
                        <%= link_to post.title, edit_post_path(post), data: {turbo: false}, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                    </div>
                    <div class="text-sm text-gray-500 text-ellipsis truncate-50-chars whitespace-nowrap overflow-hidden">
                        <%= post.description %>
                    </div>
                </div>
            </div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
            <%if post.published %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%=post.published%>
            <%else%>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-600 text-white">
                    <%= post.published%>
            <%end%>
                </span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= post.author.email %>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            0
        </td>
<% end %>
        <td class="px-6 py-4 whitespace-nowrap">
            <%= button_to "Delete post", post, class: "ocus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900", method: :delete,  data: {turbo_confirm: "Are you sure?" } %>
        </td>
    </tr>