<div class="container mx-auto p-4 h-full border-t-2">
    <!-- Sidebar -->
    <nav class="bg-white border-gray-200 pb-2" data-controller="hamburger">
        <div class="max-w-screen-xl flex flex-wrap items-center mx-auto p-4 justify-end md:justify-center">
            <div class="items-stretch hidden md:flex space-x-3" data-hamburger-target="menu">
                <ul class="flex justify-center gap-4 items-center w-full">
                    <li class="flex">
                        <%= link_to "Your Posts", user_posts_author_index_path, data: { turbo_frame: "author-content" } %>
                    </li>
                    <li class="flex">
                        <%= link_to "New Post", new_post_path, data: { turbo_frame: "author-content" } %>
                    </li>
                </ul>
            </div>
            <button title="Button" type="button" class="p-4 md:hidden" data-hamburger-target="button">
                <%= image_tag "chevron-left", class: "w-6 dark:text-gray-800", data: {hamburger_target: "menuIcon" } %>
                <%= image_tag "closed_menu", class: "hidden w-6 dark:text-gray-800", data: {hamburger_target: "closeIcon" } %>
            </button>
        </div>
    </nav>

    <!-- Main content -->
    <div class="overflow-auto shadow-md sm:rounded-lg">
        <%= turbo_frame_tag "author-content" do %>
            <%= render "user_posts", posts: @posts %>
        <%end%>
    </div>
    <!-- Use turbo frames to make this automatically populate the various admin pages -->
</div>