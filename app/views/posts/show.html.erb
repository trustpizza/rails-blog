<!-- Main Content -->
<div class="container mx-auto mt-6">
    <div class="grid grid-cols-4 gap-4">
        <!-- Sidebar (Empty for now) -->
        <div class="col-span-1 bg-gray-200 p-4">
            <!-- Sidebar Content Goes Here -->
        </div>

        <!-- Post Details -->
        <div class="col-span-3 bg-white p-4">
            <!-- Notice Message -->
            <p class="text-green-500"><%= notice %></p>

            <!-- Rendered Post -->
            <%= render @post %>

            <!-- Actions -->
            <div class="mt-4">
                <%= link_to "Edit this post", edit_post_path(@post), class: "text-green-600 hover:underline mr-4" %>
                <%= link_to "Back to posts", posts_path, class: "text-green-600 hover:underline mr-4" %>
                <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
            </div>
        </div>
    </div>
</div>
