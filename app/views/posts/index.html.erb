<div class="w-full px-8 my-12">
  <div class="flex justify-between items-center mb-4 pb-4 mx-4">
    <h1 class="mr-auto ml-auto font-bold text-4xl underline">Posts</h1>
  </div>
  <div class="flex flex-col gap-4 md:grid md:grid-cols-2 lg:grid-cols-3">
    <% @posts.each do |post| %>
      <%= render "post_card", post: post %>
    <% end %>
  </div>
</div>
