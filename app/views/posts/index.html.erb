<!-- Main Content -->
<div class="container mx-auto mt-6">
    <div class="grid grid-cols-4 gap-4">
        <!-- Sidebar (Empty for now) -->
        <div class="col-span-1 bg-gray-200 p-4">
            <!-- Sidebar Content Goes Here -->
        </div>

        <!-- Posts Section -->
        <div class="col-span-3 bg-white p-4">
            <h2 class="text-lg font-bold text-green-700 mb-4">Posts</h2>
            <div id="posts">
                <% @posts.each do |post| %>
                    <%= render post %>
                    <p class="mt-2">
                        <%= link_to "Show this post", post, class:"text-green-600 hover:underline" %>
                    </p>
                <% end %>
            </div>

            <!-- New Post Button -->
            <%= link_to "New post", new_post_path, class: "mt-4 inline-block bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
        </div>
    </div>
</div>
