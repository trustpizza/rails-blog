<div class="container mx-auto mt-6">
    <div class="bg-white p-6 rounded-md shadow-md">
        <!-- Editing post title -->
        <h1 class="text-2xl font-bold text-green-700 mb-4">Editing post</h1>

        <!-- Render the form for editing the post -->
        <%= render "form", post: @post %>
        <% @post.elements.each do |element| %>
            <%= render 'elements/element_form', element:element %>
        <% end %>
        
        <!-- Links for navigation -->
        <div class="mt-4">
            <%= link_to "Show this post", @post, class: "text-green-600 hover:underline mr-4" %>
            <%= link_to "Back to posts", posts_path, class: "text-green-600 hover:underline" %>
        </div>
        <div>
            <%= form_with(model: [@post, @element], local: true ) do |form| %>
                <%= form.hidden_field :element_type, value: 'paragraph' %>
                <%= form.submit class: "font-bold text-2xl block rounded-sm py-2 px-4 bg-slate-600 hover:bg-slate-700 text-white font-small cursor-pointer" do %>
                    <i class="fa-solid fa-paragraph"></i> 
                <% end %>
            <% end %>
        </div>
    </div>
</div>
