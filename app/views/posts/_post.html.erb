  <div class="w-11/12 lg:w-8/12 2xl:w-6/12 mx-auto pt-4 flex flex-col gap-2">    
    <div class="rounded overflow-hidden shadow-md bg-white pb-4">
      <% if post.header_image.present? %>
        <%= image_tag @post.header_image, class: "w-full h-96 rounded-t object-cover" %>
      <% end %>
    <div class="px-6 mt-4">
      <div class="font-bold text-2xl mb-2">
        <%= post.title %>
      </div>
      <ul class="flex flex-col">
        <!-- Content goes here -->
        <% post.elements.each do |element| %>
          <%= render 'elements/element', element: element %>
          <br>
        <% end %>
      </ul>
    </div>
  </div>