  <div class="w-11/12 lg:w-11/12 2xl:w-9/12 mx-auto pt-4 flex flex-col gap-2">
    <span class='hidden md:block'>
      <%= link_to "Back", posts_path, class: "block mb-1 rounded-sm py-2 mt-3 px-4 bg-sky-500 text-white hover:bg-sky-600 inline-block font-medium", data: {turbo: false} %>
    </span> 
    
    <div class="rounded overflow-hidden shadow-md bg-white pb-4">
      <%= image_tag @post.header_image, class: "w-full h-96 rounded-t object-cover" %>
    <div class="px-6 mt-4">
      <div class="font-bold text-2xl mb-2">
        <%= post.title %>
      </div>
      <ul class="flex flex-col">
        <!-- Content goes here -->
        <% post.elements.each do |element| %>
          <%= render 'elements/element', element: element %>
          <br>
        <% end %>
      </ul>
    <% if params[:action] == 'show' %>
        <div class="mt-4 rounded overflow-hidden shadow-md bg-white px-6 py-4">
          <% if post.comments.length != 0 %>
            <%= turbo_frame_tag "comments_section" do %>
              <div>
                <h3 class="text-md font-semibold text-sky-700 mb-2">Comments:</h3>
                <%= render partial: 'comments/comment', collection: post.comments, as: :comment %>
              </div>
            <% end %>
          <% else %>
          <div>
            <h3 class="text-md font-semibold text-sky-700 mb-2">Comments:</h3>
          </div>
          <% end %>
          <% if user_signed_in? %>
            <%= render 'new_comment_button', post: post %>
          <% end %>
        </div>
    <% end %>
    </div>
  </div>