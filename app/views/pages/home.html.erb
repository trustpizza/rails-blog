<div class="flex flex-col h-screen w-full">
    <header class="p-4 justify-self-start flex justify-around w-full bg-slate-200">
        <div>
            A Little Love Story
        </div>

        <ul class="flex gap-2">
            <li>
                <%= link_to 'Journal' %>
            </li>
            <li>
                <%= link_to 'Photos' %>
            </li>
            <li>
                <%= link_to 'Map' %>
            </li>
        </ul>
    </header>

    <div class="h-full" data-controller="carousel">
        <%=
            image_tag 'killington',
            alt: "Killington, Vermont",
            data: {
                carousel_target: "slide"
            }        
        %>
        <%=
            image_tag "thewhites",
            alt: "The White Mountains",
            data: {
                carousel_target: "slide"
            },
            class: "hidden"
        %>

        <button data-action="click->carousel#next">
            Next
        </button>

        <button data-action="click->carousel#previous">
            Last
        </button>

        <div>

        </div>
    </div>

    <nav class="self-end bg-slate-200 p-2 w-full flex justify-center items-center">
        ❤️
    </nav>
</div>