<div class="flex flex-col h-screen w-full">
    <header class="p-4 justify-self-start flex justify-around w-full bg-slate-200">
        <div class="font-moon font-bold text-2xl" >
            A Little Travel Story
        </div>
    </header>

    <div class="grow text-center overflow-hidden"> <!-- Slider Parent -->
        <div class="max-h-full flex items-center overflow-x-auto scroll-auto snap-mandatory slides" data-controller="carousel">
            <%=
                image_tag "thewhites",
                alt: "The White Mountains",
                data: {
                    carousel_target: "slide",
                    temp: "h-full max-w-none snap-start shrink-0 origin-center scale-100 transition-transform relative"
                },
                class: "h-full max-w-none"
            %>
            <%=
                image_tag 'killington',
                alt: "Killington, Vermont",
                data: {
                    carousel_target: "slide"
                },
                class: "h-full max-w-none"
            %>
            <%=
                image_tag "snack-on-mountain-lake",
                alt: "A Snack on top of a lake overlooking a mountain",
                data: {
                    carousel_target: "slide"
                },
                class: "h-full max-w-none"
            %>
            <%=
                image_tag "axel-and-arlo",
                alt: "A man and his dog with a mountain sunset behind",
                data: {
                    carousel_target: "slide"
                },
                class: "h-full max-w-none hidden"
            %>
        </div>
    </div>

    <nav class="self-end bg-slate-200 p-2 w-screen flex justify-center items-center">  
        <ul class="flex gap-2">
            <li>
                <%= link_to 'Journal' %>
            </li>
            <li>
                <%= link_to 'Photos' %>
            </li>
            <li>
                <%= link_to 'Map' %>
            </li>
        </ul>
    </nav>
</div>