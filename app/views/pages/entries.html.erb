<div class="mx-8 my-12">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Posts</h1>

    <div class="flex justify-center content-center">
        <% @posts.each do |post| %>
          <%= link_to '', class: "flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-3xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700" do %>
              <% if post.header_image.persisted? %>
                <%= image_tag post.header_image, class: "object-cover w-full rounded-t-lg min-h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" %>
              <% end %>
              <div class="flex flex-col justify-between p-4 leading-normal">
                  <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%=post.title%></h5>
                  <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%=post.description%></p>
              </div>
          
          <% end %>
        <% end %> 
    </div> 
</div>
